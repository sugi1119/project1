%div.row
  %div.col-md-4.col-md-offset-4
    - if flash[:notice].present?
      %div.notice= flash[:notice]

    = form_tag '/login' do
      %div.form-group
        = label_tag 'username'
        = text_field_tag 'username', nil, :autofocus => true, :class => 'form-control'

      %div.form-group
        = label_tag 'password'
        = password_field_tag 'password', nil,  :class => 'form-control'
      %div.btn-default
      = submit_tag 'login', :class => 'btn btn-default'